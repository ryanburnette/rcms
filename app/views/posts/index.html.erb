<div class="panel panel-default admin-index">
  <div class="panel-heading"><h2>Posts</h2></div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Slug</th>
            <th>Published</th>
            <th class="edit"></th>
            <th class="delete"></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><strong><%= post.title %></strong></td>
              <td><%= post.slug %></td>
              <td><%= post.published.strftime("%d %b %Y at %I:%M %p") %></td>
              <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-default btn-xs' %></td>
              <td><%= button_to 'Delete', post, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure you want to delete this post?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to 'New Post', new_post_path, {:class=>"btn btn-primary"} %>
  </div>
</div>
