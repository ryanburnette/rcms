<!DOCTYPE html>
<html>
<head>

<title>rcms: Admin</title>

<%= csrf_meta_tags %>

<%= stylesheet_link_tag :admin %>

<%= javascript_include_tag :rails, :application, :admin %>

</head>


<body class="admin">

  <div class="container header">
    <h1>rcms: Admin</h1>

    <% if admin_user_signed_in? %>
    <ul class="nav nav-tabs">
      <li><%= link_to "Dashboard", admin_dashboard_path %></li>
      <li><%= link_to "Posts", admin_posts_path %></li>
      <li><%= link_to "Pages", admin_pages_path %></li>
      <li><%= link_to "Users", admin_admin_users_path %></li>
      <li class="pull-right">
        <a href="#" class="sign-out-link">Sign Out</a>
        <%= button_to "Sign out", destroy_admin_user_session_path, :method => "delete", :class => "sign-out-button" %>
      </li>
    </ul>
    <% end %>
  </div>

  <div class="container">
  
    <% if alert %><div class="alert alert-danger"><%= alert %></div><% end %>
    <% if notice %><div class="alert alert-info notice"><%= notice %></div><% end %>

    <%= yield %>

  </div>

</body></html>
