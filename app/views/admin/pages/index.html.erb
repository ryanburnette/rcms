<div class="panel panel-default admin-index">
  <div class="panel-heading"><h2>Pages</h2></div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="narrow"><%= check_box_tag "all" %></th>
            <th>Title</th>
            <th>Slug</th>
            <th>Status</th>
            <th>Author</th>
            <th>Date</th>
            <th class="narrow"></th>
            <th class="narrow"></th>
          </tr>
        </thead>

        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td><%= check_box_tag "page-#{page.id}" %></td>
              <td><%= page.title %></td>
              <td><%= page.slug %></td>
              <td><%= page.status.capitalize %></td>
              <td><%= page.admin_user.email %></td>
              <td><%= page.date.getlocal.strftime("%Y-%m-%d %l:%M %p %Z") %></td>
              <td><%= link_to 'Edit', edit_admin_page_path(page.id), :class => 'btn btn-default btn-xs' %></td>
              <td><%= button_to 'Delete', admin_page_path(page.id), {:method => :delete, :class => 'btn btn-danger btn-xs', :data => {:confirm => 'Are you sure you want to delete this page?'} } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to 'New Page', new_admin_page_path, {:class=>"btn btn-primary"} %>
  </div>
</div>
