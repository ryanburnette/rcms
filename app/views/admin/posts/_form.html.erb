<div class="form-group">
  <label>Title</label>
  <%= f.text_field :title, :class => "form-control" %>
</div>
<div class="form-group">
  <label>Slug</label>
  <%= f.text_field :slug, :class => "form-control" %>
</div>
<div class="form-group">
  <label>Status</label>
  <%= f.select :status, options_for_select(post_statuses), {}, :class => "form-control" %>
</div>
<div class="form-group select-author" data-admin-current-user-id="<%= current_admin_user.id %>">
  <label>Author</label>
  <%= f.collection_select :admin_user_id, AdminUser.all, :id, :name, {}, :class => "form-control" %>
</div>
<div class="form-group">
  <label>Date</label>
  <%= f.datetime_local_field :date, :class => "form-control" %>
</div>
<div class="form-group">
  <label>Content</label>
  <div id="editor"></div>
  <%= f.text_area :content, :class => "form-control" %>
</div>
